{
	"name": "starter",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"start": "react-router-serve ./build/server/index.js",
		"typecheck": "react-router typegen && tsc",
		"dev:ui": "react-router dev",
		"dev:zero": "zero-cache-dev -p app/modules/zero.ts",
		"dev:db-up": "docker compose --env-file .env -f ./others/db/docker-compose.yml up",
		"dev:db-down": "docker compose --env-file .env -f ./others/db/docker-compose.yml down",
		"auth:generate": "pnpm dlx @better-auth/cli generate --config ./app/modules/.server/auth.ts",
		"auth:migrate": "pnpm dlx @better-auth/cli migrate --config ./app/modules/.server/auth.ts",
		"db:migrate": "pnpm exec drizzle-kit migrate",
		"db:generate": "pnpm exec drizzle-kit generate",
		"db:push": "pnpm exec drizzle-kit push",
		"db:pull": "pnpm exec drizzle-kit pull",
		"components:add": "pnpm dlx shadcn@latest add",
		"icons:add": "pnpm dlx @sly-cli/sly add lucide-icons --directory others/svg-icons --overwrite",
		"icons:build": "pnpm dlx svg-icons-cli build -i others/svg-icons -o app/components/icons --optimize",
		"fmt:check": "pnpm exec biome format .",
		"fmt:fix": "pnpm exec biome format --write .",
		"lint:check": "pnpm exec biome lint .",
		"lint:fix": "pnpm exec biome lint --write .",
		"lint:unsafe": "pnpm exec biome check --unsafe .",
		"check": "pnpm exec biome check .",
		"fix": "pnpm exec biome check --write .",
		"unsafe": "pnpm exec biome check --write --unsafe ."
	},
	"dependencies": {
		"@epic-web/client-hints": "^1.3.5",
		"@epic-web/invariant": "^1.0.0",
		"@hookform/resolvers": "^4.1.0",
		"@paralleldrive/cuid2": "^2.2.2",
		"@radix-ui/react-label": "^2.1.2",
		"@radix-ui/react-slot": "^1.1.2",
		"@react-router/node": "^7.1.5",
		"@react-router/serve": "^7.1.5",
		"@rocicorp/zero": "^0.15.2025021402",
		"arktype": "^2.0.4",
		"better-auth": "^1.1.18",
		"cookie": "^1.0.2",
		"cva": "1.0.0-beta.3",
		"drizzle-orm": "^0.39.3",
		"isbot": "^5.1.22",
		"jose": "^5.9.6",
		"pg": "^8.13.3",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-hook-form": "^7.54.2",
		"react-router": "^7.1.5",
		"remix-utils": "^8.1.0",
		"tailwind-merge": "^3.0.1",
		"ts-pattern": "^5.6.2"
	},
	"devDependencies": {
		"@babel/preset-typescript": "^7.26.0",
		"@biomejs/biome": "^1.9.4",
		"@react-router/dev": "^7.1.5",
		"@tailwindcss/vite": "^4.0.6",
		"@types/node": "^22.13.4",
		"@types/pg": "^8.11.11",
		"@types/react": "^19.0.9",
		"@types/react-dom": "^19.0.3",
		"babel-plugin-react-compiler": "^19.0.0-beta-714736e-20250131",
		"drizzle-kit": "^0.30.4",
		"drizzle-zero": "^0.5.0",
		"react-router-devtools": "^1.1.4",
		"tailwindcss": "^4.0.6",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.7.3",
		"vite": "^6.1.0",
		"vite-plugin-babel": "^1.3.0",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"pnpm": {
		"onlyBuiltDependencies": ["@biomejs/biome", "@rocicorp/zero-sqlite3"]
	}
}
